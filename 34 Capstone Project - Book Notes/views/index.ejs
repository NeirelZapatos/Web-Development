<% for (let i = 0; i < books.length; i++) { %>
    <div class="container">
        <div class="row">
            <div class="col-4">
                <img src="https://covers.openlibrary.org/b/isbn/<%= books[i].isbn %>-L.jpg" alt="<%= books[i].title %> cover"/>
            </div>
            <div class="col-8">
                <div class="mb-3">
                    <h1 class="title"><%= books[i].title %></h1>
                    <i class="author-text">By <%= books[i].author %></i>
                </div> 
                <p class="summary-text"><%= books[i].summary %></p>
            </div>
        </div>
        <div class="row d-flex">
            <div class="col-10 mx-auto">
                <% for (let j = 0; j < books[i].comments.length; j++) { %>
                    <p>By <%= books[i].comments[j].username %></p>
                    <p><%= books[i].comments[j].comment %></p>
                <% } %>
            </div> 
        </div>
    </div>
<% } %>

        <% for (let i = 0; i < books.length; i++) { %>
            <a href="/notes/<%= books[i].id %>">
                <p><%= books[i].title %></p>
            </a>
            <p><%= books[i].author %></p>
            <p><%= books[i].summary %></p>
            <p><%= books[i].rating %></p>
            <p><%= books[i].isbn %></p>
            <img src="https://covers.openlibrary.org/b/isbn/<%= books[i].isbn %>-L.jpg" alt="<%= books[i].title %> cover"/>
            <form  action="/add-comment/<%= books[i].id %>" method="POST">
                <input type="text" name="comment" placeholder="comment">
                <button type="submit" >Post Comment</button>
            </form>
            <% for (let j = 0; j < books[i].comments.length; j++) { %>
                <p>By <%= books[i].comments[j].username %></p>
                <p><%= books[i].comments[j].comment %></p>
            <% } %>
        <% } %>
        <a href="/log-out" role="button">Log out</a>
        <a href="/log-in" role="button">Log in</a>
